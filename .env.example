# NextAuth provider credentials
# Replace with your provider credentials for local testing.

# Example for GitHub OAuth App
GITHUB_ID=your_github_client_id
GITHUB_SECRET=your_github_client_secret

# Example for Google OAuth
GOOGLE_ID=your_google_client_id
GOOGLE_SECRET=your_google_client_secret

# NextAuth secret (random string)
NEXTAUTH_SECRET=your_nextauth_secret

# NextAuth URL (for dev, http://localhost:3000)
NEXTAUTH_URL=http://localhost:3000

# Demo mode flag
DEMO_MODE=true

# Admin login passcode (used by /admin/login)
# Backoffice administrator credentials
NEXT_PUBLIC_BACKOFFICE_USERNAME=admin
NEXT_PUBLIC_BACKOFFICE_PASSWORD=family-secret
